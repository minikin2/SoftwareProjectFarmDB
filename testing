dbFile = 'Becker Farms Inventory.db'

#testing isInt
print(isInt("ns"))
print(isInt(2))
print(isInt(3.3))

#testing view
print(view(dbFile))

#testing isNumNeg
print(isNumNeg(-1))
print(isNumNeg("l"))
print(isNumNeg(3.3))
print(isNumNeg(-0.2))
print(isNumNeg(5))
print(isNumNeg(0))

#testing addItem
#def addItem(dbFile, name, qnt, desc, cate, unit, price):
#this should not add
addItem(dbFile, "test", "t", "t", "t", "t", "t")
#this should not add
addItem(dbFile, "test", -3, "t", "t", "t", "t")
#this should not add
addItem(dbFile, "test", 2, "t", "t", "t", "t")
#this should not add
addItem(dbFile, "test", 2, "t", "t", "t", -3)
#this item should not add
addItem(dbFile, "test", 2, "t", "t", "t", 1.222)
#this should add
addItem(dbFile, "test", 2, "t", "t", "t", 2.2)
#this should add
addItem(dbFile, "test", 2, "t", "t", "t", 5)

#testing updateItem
num = getItemID(dbFile, "test")
#def updateItem(dbFile, num, name, qnt, desc, cate, unit, price):
updateItem(dbFile, num, "", "h", "t", "t", None, "t")
updateItem(dbFile, num, "", -3, "t", "t", None, "t")
updateItem(dbFile, num, "", "-1", "t", "t", None, "t")
#error should be price not qnt 
updateItem(dbFile, num, "", "2", "t", "t", None, "t")
#error should be price not qnt
updateItem(dbFile, num, "", 3, "t", "t", None, "t")
updateItem(dbFile, num, "", 3, "t", "t", None, -3)
updateItem(dbFile, num, "", 3, "t", "t", None, "-1")
#this should work
updateItem(dbFile, num, "", 3, "t", "t", None, "2")
#this should work
updateItem(dbFile, num, "", 3, "t", "t", None, 3)
#error should be price
updateItem(dbFile, num, "", 3, "t", "t", None, 3.333)

